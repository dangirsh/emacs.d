defaults
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

# Gmail account
account gmail
host smtp.gmail.com
port 587
auth on
user pemacsmail1@gmail.com
passwordeval  "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mailpass-gmail.gpg"
from pemacsmail1@gmail.com
logfile ~/.msmtp.log
